{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["*.ts", "routes/**/*.ts", "models/**/*.ts", "services/**/*.ts", "utils/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
